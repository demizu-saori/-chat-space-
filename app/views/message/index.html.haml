= render partial: 'groups/side'
.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group グループ名
      %ul.main-header__left-box__member-list
        %li.main-header__left-box__member-list-member<>
        menber
  = link_to 'Edit', root_path, class: 'main-header__edit-btn'
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker リラックマ
        %p.message__upper-info__date 2019.04.01
      .message__text こんにちは。
  .form
    %form{class: "new__message", id: "new__message",action:"",method: "post"}
      .input-box
        %input{placeholder: "new message",class: "input-box__text",type: "text",name: "message"}
        %label{class: "input-box__image"}
          %i.fa.fa-image
        %input{type: "submit",value: "send",class: "submit-btn"}
